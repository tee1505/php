<?php
$n = 4; // กำหนดขนาดรูปแบบเอง

// =====================================================================
//                              รูปที่ 1
// =====================================================================
// แสดงรูปสามเหลี่ยมเพิ่มระดับ เช่น *, **, ***, ****
// ใช้ For Loop
echo "=== ใช้ For Loop: รูปที่ 1 ===<br>";

for ($i = 1; $i <= $n; $i++) {          // ลูปจำนวนแถว
    for ($j = 1; $j <= $i; $j++) {      // ลูปจำนวน * ในแต่ละแถว
        echo "*";
    }
    echo "<br>";                        // ขึ้นบรรทัดใหม่
}

echo "<br>";


// =====================================================================
//                              รูปที่ 2
// =====================================================================
// แสดงเลขซ้ำ n ครั้ง เช่น 1 1 1 1 / 2 2 2 2
echo "=== ใช้ For Loop: รูปที่ 2 ===<br>";

for ($i = 1; $i <= $n; $i++) {          // ลูปแถว
    for ($j = 1; $j <= $n; $j++) {      // ลูปจำนวนครั้งที่ต้องพิมพ์เลขซ้ำ
        echo $i . " ";
    }
    echo "<br>";
}

echo "<br>";


// =====================================================================
//                              รูปที่ 3
// =====================================================================
// แสดงเลขตามระดับ เช่น 1 / 2 2 / 3 3 3
echo "=== ใช้ For Loop: รูปที่ 3 ===<br>";

for ($i = 1; $i <= 3; $i++) {          // ลูปแถว
    for ($j = 1; $j <= $i; $j++) {     // พิมพ์เลขเท่ากับค่าของแถว
        echo $i . " ";
    }
    echo "<br>";
}

echo "<br>";


// =====================================================================
//                              รูปที่ 4 (กรอบ)
// =====================================================================
// พิมพ์กรอบสี่เหลี่ยมมีขอบเป็น * และด้านในเป็นตัวเลข
echo "=== ใช้ For Loop: รูปที่ 4 ===<br>";

$rows = 5;    // จำนวนแถว
$cols = 6;    // จำนวนคอลัมน์

for ($i = 1; $i <= $rows; $i++) {      // ลูปแถว
    for ($j = 1; $j <= $cols; $j++) {  // ลูปคอลัมน์

        // บรรทัดบนสุดหรือบรรทัดล่างสุด
        if ($i == 1 || $i == $rows) {
            echo "* ";
        }

        // บรรทัดกลาง
        else {
            // คอลัมน์แรกและคอลัมน์สุดท้ายเป็นขอบ
            if ($j == 1 || $j == $cols) {
                echo "* ";
            }
            // ส่วนด้านในกรอบ
            else {
                echo ($i - 1) . " ";
            }
        }
    }
    echo "<br>";
}

echo "<br>";


// =====================================================================
//                           รูปที่ 5 (กลับหัว)
// =====================================================================
// แสดงตัวเลขลดระดับ เช่น 3 3 3 / 2 2 / 1
echo "=== ใช้ For Loop: รูปที่ 5 ===<br>";

for ($i = 3; $i >= 1; $i--) {          // เริ่มจาก 3 ลดลงมาถึง 1
    for ($j = 1; $j <= $i; $j++) {     // พิมพ์ตัวเลขตามจำนวนแถว
        echo $i . " ";
    }
    echo "<br>";
}

?>
<h1>------------------------------------------------</h1>

<br><br><br><br><br>

<!-- ############################################################ -->

<?php
$n = 4;

// =====================================================================
//                    เริ่มส่วน While Loop
// =====================================================================

// ------------------ รูปที่ 1 ------------------
echo "=== ใช้ While Loop: รูปที่ 1 ===<br>";

$i = 1;
while ($i <= $n) {                      // ลูปแถว
    $j = 1;
    while ($j <= $i) {                  // พิมพ์ *
        echo "*";
        $j++;
    }
    echo "<br>";
    $i++;
}

echo "<br>";


// ------------------ รูปที่ 2 ------------------
echo "=== ใช้ While Loop: รูปที่ 2 ===<br>";

$i = 1;
while ($i <= $n) {
    $j = 1;
    while ($j <= $n) {                  // พิมพ์เลขซ้ำ n ครั้ง
        echo $i . " ";
        $j++;
    }
    echo "<br>";
    $i++;
}

echo "<br>";


// ------------------ รูปที่ 3 ------------------
echo "=== ใช้ While Loop: รูปที่ 3 ===<br>";

$i = 1;
while ($i <= 3) {
    $j = 1;
    while ($j <= $i) {                  // พิมพ์เลขตามระดับ
        echo $i . " ";
        $j++;
    }
    echo "<br>";
    $i++;
}

echo "<br>";


// ------------------ รูปที่ 4 (กรอบ) ------------------
echo "=== ใช้ While Loop: รูปที่ 4 ===<br>";

$rows = 5;
$cols = 6;

$i = 1;
while ($i <= $rows) {

    $j = 1;
    while ($j <= $cols) {

        if ($i == 1 || $i == $rows) {   // ขอบบน & ขอบล่าง
            echo "* ";
        } else {
            if ($j == 1 || $j == $cols) {  // ขอบซ้าย & ขวา
                echo "* ";
            } else {
                echo ($i - 1) . " ";       // ด้านใน
            }
        }
        $j++;
    }

    echo "<br>";
    $i++;
}

echo "<br>";


// ------------------ รูปที่ 5 (กลับหัว) ------------------
echo "=== ใช้ While Loop: รูปที่ 5 ===<br>";

$i = 3;
while ($i >= 1) {
    $j = 1;
    while ($j <= $i) {
        echo $i . " ";
        $j++;
    }
    echo "<br>";
    $i--;
}

?>
<h1>------------------------------------------------</h1>

<br><br><br><br><br>

<!-- ############################################################ -->


<?php
$n = 4;

// =====================================================================
//                    เริ่มส่วน Do...While Loop
// =====================================================================

// ------------------ รูปที่ 1 ------------------
echo "=== ใช้ Do...While Loop: รูปที่ 1 ===<br>";

$i = 1;
do {
    $j = 1;
    do {
        echo "*";          // พิมพ์ *
        $j++;
    } while ($j <= $i);

    echo "<br>";
    $i++;
} while ($i <= $n);

echo "<br>";


// ------------------ รูปที่ 2 ------------------
echo "=== ใช้ Do...While Loop: รูปที่ 2 ===<br>";

$i = 1;
do {
    $j = 1;
    do {
        echo $i . " ";     // พิมพ์เลขซ้ำ
        $j++;
    } while ($j <= $n);

    echo "<br>";
    $i++;
} while ($i <= $n);

echo "<br>";


// ------------------ รูปที่ 3 ------------------
echo "=== ใช้ Do...While Loop: รูปที่ 3 ===<br>";

$i = 1;
do {
    $j = 1;
    do {
        echo $i . " ";     // พิมพ์จำนวนเพิ่มตามระดับ
        $j++;
    } while ($j <= $i);

    echo "<br>";
    $i++;
} while ($i <= 3);

echo "<br>";


// ------------------ รูปที่ 4 (กรอบ) ------------------
echo "=== ใช้ Do...While Loop: รูปที่ 4 ===<br>";

$rows = 5;
$cols = 6;

$i = 1;
do {
    $j = 1;
    do {
        if ($i == 1 || $i == $rows) {
            echo "* ";            // ขอบบน/ล่าง
        } else {
            if ($j == 1 || $j == $cols) {
                echo "* ";        // ขอบซ้าย/ขวา
            } else {
                echo ($i - 1) . " "; // ด้านใน
            }
        }
        $j++;
    } while ($j <= $cols);

    echo "<br>";
    $i++;
} while ($i <= $rows);

echo "<br>";


// ------------------ รูปที่ 5 (กลับหัว) ------------------
echo "=== ใช้ Do...While Loop: รูปที่ 5 ===<br>";

$i = 3;
do {
    $j = 1;
    do {
        echo $i . " ";      // พิมพ์ตัวเลขตามระดับ
        $j++;
    } while ($j <= $i);

    echo "<br>";
    $i--;
} while ($i >= 1);

?>
